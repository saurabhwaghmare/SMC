<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/border" >



    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="65dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textStyle="bold"
            android:id="@+id/mem_name_tv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/mem_desig_tv"
            android:layout_alignLeft="@+id/mem_name_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@+id/mem_name_tv" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/mem_das_tv"

            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/mem_desig_tv"
            android:layout_toRightOf="@+id/mem_desig_tv"
            android:layout_toEndOf="@+id/mem_desig_tv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/mem_num_tv"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/mem_desig_tv"
            android:layout_toRightOf="@+id/mem_das_tv"
            android:layout_toEndOf="@+id/mem_das_tv"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/mem_iv"
            android:layout_marginTop="10dp"

            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/mem_desig_tv"
            android:layout_toStartOf="@+id/mem_desig_tv" />


    </RelativeLayout>



</RelativeLayout>


